<%= form_for(@food, :html => { :class => 'form-horizontal' , :role => "form",:multipart => true })   do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> t('profile.food_err')</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
          <div class="form-group">
            <%= f.label :name ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :name ,:class => 'form-control ', :placeholder => 'Name'%>
            </div>
          </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t('profile.amount_id'),:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.select :amount_type_id , @amount_types.map { |e| [ e.name , e.id ] } ,{}, {:class => 'form-control' } %>
            <%= link_to "manage amount type" , controller: "amount_types" , action: "index"%>
          </div>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t('profile.per') ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.text_field :per ,:class => 'form-control ' , :placeholder => t('profile.per')%>
          </div>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
          <div class="form-group">
            <%= f.label t('profile.cal') ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.number_field :calory ,:class => 'form-control ', :placeholder => t('profile.cal')%>
            </div>
          </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
          <div class="form-group">
            <%= f.label t('profile.protein') ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :protein  ,:class => 'form-control ', :placeholder => t('profile.protein') %>
            </div>
          </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
          <div class="form-group">
            <%= f.label t('profile.carb') ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :carbohydrate ,:class => 'form-control ', :placeholder => t('profile.carb')%>
            </div>
          </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
          <div class="form-group">
            <%= f.label t('profile.fat') ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :fat ,:class => 'form-control ' , :placeholder => t('profile.fat')%>
            </div>
          </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label t('profile.pic') ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.file_field :avatar %>
          </div>
        </div>
      </div>
    </div>
    <br>

  <div class="form-group row">
    <!--<button type="submit" class="btn btn-primary"> Let's Go <span class="glyphicon glyphicon-chevron-right"></span></button>-->
    <%= f.submit 'Create' , :class => 'btn btn-info'  %>
  </div>
<% end %>
