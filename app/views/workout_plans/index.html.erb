<h1>Listing workout_plans</h1>

<div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @workout_plans.each do |workout_plan| %>
          <tr>
            <td><%= workout_plan.name %></td>
            <td><%= link_to 'Show', workout_plan %></td>
            <td><%= link_to 'Edit', edit_workout_plan_path(workout_plan) %></td>
            <td><%= link_to 'Destroy', workout_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
