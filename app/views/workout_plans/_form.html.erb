<%= form_for(@workout_plan) do |f| %>
  <% if @workout_plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout_plan.errors.count, "error") %> t('profile.workout_plan_error')</h2>

      <ul>
      <% @workout_plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
