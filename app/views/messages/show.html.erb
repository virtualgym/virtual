


<div class="row">
  <div class="col-md-3 col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to raw("Inbox <span class='badge pull-right'>#{@inbox}</span>") , :controller => 'messages' , :action => 'inbox' %></li>
      <li><%= link_to 'Sent' , :controller => 'messages' , :action => 'sent' %></li>
    </ul>
  </div>
  <div class="col-md-9 col-sm-9">
    <h1>Message</h1>
    <br>
    <br>
    <p id="notice"><%= notice %></p>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">From : <%= @message.from.email %>  <span class="glyphicon glyphicon-arrow-right"></span>  To : <%= @message.to.email %></h3>
      </div>
      <div class="panel-body">
        <%= @message.content %>
      </div>
    </div>
    <br>
  </div>

</div>