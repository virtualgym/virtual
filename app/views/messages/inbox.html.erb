<div class="row">
  <div class="col-md-3 col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to raw("Inbox <span class='badge pull-right'>#{@inbox}</span>") , :controller => 'messages' , :action => 'inbox' %></li>
      <li><%= link_to 'Sent' , :controller => 'messages' , :action => 'sent' %></li>
    </ul>
  </div>
<div class="col-md-9 col-sm-9">
  <h1>Inbox</h1>
  <br>
  <br>
  <div class="table-responsive ">
    <table class="table ">
      <col width="15%">
      <col width="15%">
      <col width="60%">
      <col width="10%">
      <thead>
      <tr>
        <th></th>
        <th>From</th>
        <th>Content</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="inboxes">
        <%= render :partial => 'message_list_inbox' %>
      </tbody>
    </table>
  </div>

  <br>
  <%= will_paginate @messages, renderer: BootstrapPagination::Rails %>
</div>

</div>