<%= form_for(@workout, :html => { :class => 'form-horizontal' , :role => "form" }) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
            <%= f.label :user_id ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :user_id ,:class => 'form-control ' , :placeholder => 'User ID'%>
            </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
            <%= f.label :workout_plan_id ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.text_field :workout_plan_id ,:class => 'form-control ' , :placeholder => 'Workout Plan ID'%>
            </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7 col-sm-7 col-sx-10">
        <div class="form-group">
            <%= f.label :date ,:class => 'col-sm-3 control-label'%>
            <div class="col-sm-9">
              <%= f.date_select :date , {:prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' },:start_year => Time.now.year-70, :end_year => Time.now.year}, {:class => 'date-select'}  %>
            </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
            <%= f.label :total_min ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.time_select :total_min ,:class => '' , :placeholder => 'Total Minutes'%>
            </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
            <%= f.label :total_cal ,:class => 'col-sm-4 control-label'%>
            <div class="col-sm-8">
                <%= f.number_field :total_cal ,:class => 'form-control ' , :placeholder => 'Total calories'%>
            </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <!--<button type="submit" class="btn btn-primary"> Let's Go <span class="glyphicon glyphicon-chevron-right"></span></button>-->
      <%= f.submit 'Create' , :class => 'btn btn-info'  %>
    </div>
<% end %>
