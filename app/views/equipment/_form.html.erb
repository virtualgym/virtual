<%= form_for(@equipment) do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipment.errors.count, "error") %> t('profile. equip_error'):</h2>

      <ul>
      <% @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('profile.name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit  :class => "btn btn-primary"%>
  </div>
<% end %>
