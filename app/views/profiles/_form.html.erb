<%= form_for(@profile, :html => { :multipart => true }) do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h3>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <br>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :firstname ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.text_field :firstname ,:class => 'form-control ', :placeholder => 'Firstname'%>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :lastname ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.text_field :lastname ,:class => 'form-control ', :placeholder => 'Lastname'%>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :Profile_Picture ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.file_field :avatar %>

          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :Cover_Picture ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.file_field :cover %>
          </div>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-7 col-sm-7 col-sx-10">
        <div class="form-group">
          <%= f.label :birthdate ,:class => 'col-sm-3 control-label'%>
          <div class="col-sm-9">
            <%= f.date_select :birthdate , {:prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' },:start_year => Time.now.year-70, :end_year => Time.now.year}, {:class => 'date-select'}  %>
          </div>
        </div>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :height ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <div class="input-group">
              <%= f.text_field :height ,:class => 'form-control ', :placeholder => 'Height (cm)'%>
              <span class="input-group-addon">cm</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :weight ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <div class="input-group">
                <%= f.text_field :weight ,:class => 'form-control ', :placeholder => 'Weight (kg)'%>
              <span class="input-group-addon">kg</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :country ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.text_field :country ,:class => 'form-control ', :placeholder => 'Country'%>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :city ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.text_field :city ,:class => 'form-control ', :placeholder => 'City'%>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-sx-10">
        <div class="form-group">
          <%= f.label :language ,:class => 'col-sm-4 control-label'%>
          <div class="col-sm-8">
            <%= f.select :language , [['English','en'],['فارسی','fa']] ,{}, {:class => 'form-control' } %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="form-group row">
      <!--<button type="submit" class="btn btn-primary"> Let's Go <span class="glyphicon glyphicon-chevron-right"></span></button>-->
      <% if :is_edit%>
        <%= f.submit "Edit" , :class => 'btn btn-info'  %>
      <%else%>
          <%= f.submit "Go" , :class => 'btn btn-info'  %>
      <%end%>
          </div>
<% end %>
